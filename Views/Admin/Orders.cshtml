@model List<BookStoreMvc.Models.Order>

@{
    ViewBag.Title = "Siparişler";
}

<h2>Siparişler</h2>

@if (!Model.Any())
{
    <p>Henüz sipariş yok.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sipariş ID</th>
                <th>Kullanıcı</th>
                <th>Sipariş Tarihi</th>
                <th>Toplam Tutar</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.User?.UserName ?? "Bilinmiyor"</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    <td>
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#details-@order.Id" aria-expanded="false" aria-controls="details-@order.Id">
                            Göster
                        </button>
                    </td>
                </tr>
                <tr class="collapse" id="details-@order.Id">
                    <td colspan="5">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Kitap</th>
                                    <th>Adet</th>
                                    <th>Birim Fiyat</th>
                                    <th>Tutar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.Items)
                                {
                                    <tr>
                                        <td>@item.Book?.Title ?? "Bilinmiyor"</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@(item.Price* item.Quantity).ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}