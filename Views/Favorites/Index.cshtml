@model List<BookStoreMvc.Models.Book>

@{
    ViewBag.Title = "Favorilerim";
}

<h2>Favorilerim</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Favoriler listeniz boş.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(book.ImageUrl))
                    {
                        <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height:200px;object-fit:cover;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Category?.Name</p>
                        <p class="card-text text-success fw-bold">@book.Price.ToString("C")</p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-controller="Favorites" asp-action="RemoveFromFavorites" asp-route-id="@book.Id" class="btn btn-danger btn-sm">
                                Favorilerden Çıkar
                            </a>
                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-success btn-sm">
                                Sepete Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}