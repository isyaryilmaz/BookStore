@using Microsoft.AspNetCore.Identity
@using BookStoreMvc.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link text-dark">Merhaba, @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link btn btn-link text-dark">Çıkış Yap</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-dark">Giriş</a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-dark">Kayıt Ol</a>
        </li>
    </ul>
}