@await Html.PartialAsync("_LoginPartial")
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - BookStore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Kitap Market</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Anasayfa</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Book" asp-action="Index">Kitaplar</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Kategoriler</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="About">Hakkımızda</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Bize Ulaşın</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">Sepetim</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Favorites" asp-action="Index">Favoriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Order" asp-action="History">Sipariş Geçmişi</a>
                    </li>

                </ul>

                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <span class="nav-link text-dark">Merhaba, @User.Identity.Name!</span>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                            </li>
                        }

                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link text-dark" style="display:inline; padding:0; border:none; background:none;">Çıkış Yap</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- SAYFA İÇERİĞİ -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-light text-center py-3 mt-4">
        <small>© 2025 BookStore Uygulaması - Tüm hakları saklıdır.</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>